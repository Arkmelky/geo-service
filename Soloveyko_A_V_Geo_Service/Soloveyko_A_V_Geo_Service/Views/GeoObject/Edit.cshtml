@using Soloveyko_A_V_Geo_Service.Models
@model Soloveyko_A_V_Geo_Service.Models.GeoObject

@{
    ViewBag.Title = "Edit";
    var GeoObjectId = Model.GeoObjectId;
}

<h2>Правка</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>GeoObject</legend>

        @Html.HiddenFor(model => model.GeoObjectId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AddressId)
        </div>
        <div class="editor-field">
            <select id="AddressId" name="AddressId" class="valid">
                <option value=""></option>
                @foreach (var adrs in (List<Address>)ViewBag.AddressId)
                {
                    <option value="@adrs.AddressId">@adrs.ToString()</option>
                }
            </select>
            @Html.ValidationMessageFor(model => model.AddressId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.GeoObjectTypeId)
        </div>
        <div class="editor-field">
            @Html.DropDownList("GeoObjectTypeId", String.Empty)
            @Html.ValidationMessageFor(model => model.GeoObjectTypeId)
        </div>
        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
    <p>
            @Html.ActionLink("Координаты Объекта","Create","Location",new {id = GeoObjectId},null)
            
        </p>
}

<div>
    @Html.ActionLink("Назад", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
